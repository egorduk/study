{#% extends "TwigBundle::form_div_layout.html.twig" %#}
{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <p class="error-message">
                {% for error in errors %}
                    <span>{{ error.message }}</span>
                {% endfor %}
            </p>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}