                                {{ form_widget(formOrder.create) }}
                                <label for="formCreateOrder_reset" class="btn btn-success"><i class="fa fa-trash-o fa-2x">&nbspОчистить</i></label>
                                {{ form_widget(formOrder.reset) }}
                            </div>
                            {{ form_row(formOrder.reset) }}
