                var a = str.replace(/\n|\r\n|\r/g, "<br>"), stringArray = a.split('<br>'), str1 = "";
                for (var i = 0; i < stringArray.length; i++) {
                    var myString = stringArray[i];
                    str1 += myString + "<br>";
                }
                return str1;
            }

