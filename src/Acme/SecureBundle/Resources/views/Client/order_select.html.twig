{% extends "AcmeSecureBundle::layout.html.twig" %}

{% block title "Order" %}

    {% block content %}
        <link rel="stylesheet" href="{{ asset('bundles/css/jqgrid/custom-theme1/jquery-ui-1.10.3.custom.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/css/jqgrid/ui.jqgrid.css') }}" />
        <script type="text/javascript" src="{{ asset('bundles/js/jqgrid/i18n/grid.locale-ru.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/js/jqgrid/jquery.jqGrid.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/js/jqgrid/jquery.fmatter.js') }}"></script>
        <style>
            .altRow {
                background-color: #f3f3f3;
                background-image: none;
            }
            .ui-jqgrid .ui-jqgrid-htable th div {
                height: 21px;
            }
            .gridCellTime {
                color: blue;
            }
            .thumbnail {
                margin-bottom: 7px;
            }
            .label-primary {
                background-color: #0088cc;
            }
            .ui-widget-content a, .ui-widget-content .ui-state-highlight a, .ui-widget-content .ui-state-hover a {
                color: white;
            }
            #dialog-message p .icon-hammer {
                font-size: 45px;
                color: green;
            }
            .ui-dialog-title {
                color: green;
            }
            #dialog-message {
                display: none;
            }
            .state-selected {
                background-color: green;
                color: white;
            }
        </style>
        <div class="container">
            <div class="row">
                <div id="blockAboutOrder">
                    <p>Номер заказа: {{ order.num }}</p>
                    <p>Тема работы: {{ order.theme }}</p>
                    <p>Задание: {{ order.task | raw }}</p>
                    <p>Объем работы: {{ order.countsheet }} стр.</p>
                    <p>Оригинальность работы: {{ order.originality }}%</p>
                    <p>Предмет: {{ order.subjectorder.childname }}</p>
                    <p>Тип работы: {{ order.typeorder.name }}</p>
                    <p>Статус заказа: {{ order.statusorder.name }}</p>
                    <p>Дата создания заказа: {{ order.datecreate.format("d.m.Y H:i") }}</p>
                    <p>Выполнение заказа до: {{ order.dateexpire.format("d.m.Y H:i") }}</p>
                </div>
                <a href="{{ path('secure_client_index') }}">Главная</a>
            </div>
            <div id="dialog-message" title="Подтверждение ставки">
                <p>
                    <span class="icon-hammer" style="float:left; margin:0 7px 50px 0;"></span>
                    Вы уверены, что согласны с выбранной ставкой?
                </p>
            </div>
            <table id="listBids"></table>
            <div id="pagerBids"></div>
            <script>
                $(document).ready(function() {
                    var btn = $.fn.button.noConflict();
                    $("#listBids").jqGrid({
                        url: {{ path('secure_client_order', { num: order.num }) | json_encode | raw }},
                        datatype: 'json',
                        mtype: 'POST',
                        rownumbers: true,
                        gridview: true,
                        viewsortcols: true,
                        recordtext: "Просмотр ставок {0} - {1}",
                        colNames:['','Автор','Стоимость','Дней','В указанный срок','Комментарий','Дата ставки','Действия'],
                        colModel :[
                            {name:'id',index:'id',hidden:true},
                            {name:'author',index:'author',width:120,align:'center',resizable:false,editable:false},
                            {name:'sum',index:'sum',width:150,align:'center',resizable:false,editable:false,formatter:'currency',formatoptions:{thousandsSeparator: " ",decimalPlaces:0,suffix:" руб."}},
                            {name:'day',index:'day',width:150,align:'center',resizable:false,editable:false},
                            {name:'is_client_date',index:'is_client_date',width:150,align:'center',resizable:false,editable:false,formatter:statusDate},
                            {name:'comment',index:'comment',width:250,align:'center',resizable:false, editable:false},
                            {name:'date_bid',index:'date_bid',width:250,align:'center',resizable:false, editable:false},
                            {name:'action',width:135,align:'center',sortable:false,resize:false,formatter:function() {
                                return "<div class='confirm-bid' style='margin-left:8px;'>" +
                                        "<div style='float:left;margin-left:5px;' class='ui-pg-div ui-inline-del' title='Принять ставку автора' onmouseover=\"$(this).addClass('ui-state-hover');\" onmouseout=\"$(this).removeClass('ui-state-hover');\">" +
                                        "<span class='icon-ok-5'></span></div></div>" +
                                        "<div class='delete-bid' style='margin-left:8px;'>" +
                                        "<div style='float:left;margin-left:5px;' class='ui-pg-div ui-inline-del' title='Удалить ставку автора' onmouseover=\"$(this).addClass('ui-state-hover');\" onmouseout=\"$(this).removeClass('ui-state-hover');\">" +
                                        "<span class='icon-trash'></span></div></div>" +
                                        "<div class='auction-bid' style='margin-left:8px;'>" +
                                        "<div style='float:left;margin-left:5px;' class='ui-pg-div ui-inline-del' title='Предложить торг автору' onmouseover=\"$(this).addClass('ui-state-hover');\" onmouseout=\"$(this).removeClass('ui-state-hover');\">" +
                                        "<span class='icon-hammer'></span></div></div>" +
                                        "<div class='open-chat' style='margin-left:8px;'>" +
                                        "<div style='float:left;margin-left:5px;' class='ui-pg-div ui-inline-del' title='Открыть чат с автором' onmouseover=\"$(this).addClass('ui-state-hover');\" onmouseout=\"$(this).removeClass('ui-state-hover');\">" +
                                        "<span class='icon-chat-5'></span></div></div>";
                            }}
                        ],
                        pager: $('#pagerBids'),
                        rowNum: 10,
                        rowList: [10,20,30],
                        viewrecords: true,
                        hidegrid: false,
                        caption: 'Таблица ставок',
                        height: '350',
                        emptyrecords: "Нету ставок авторов",
                        altRows: true,
                        altclass:'altRow',
                        loadComplete : function() {
                            function getOrderId(e) {
                                var $td = $(e.target).closest('td'), $tr = $td.closest('tr.jqgrow'), rowId = $tr.attr('id');
                                return rowId;
                            }
                            $(".confirm-bid").click(function(e) {
                                var rowId = getOrderId(e);
                               // alert(rowId);
                                if (rowId) {
                                    $("#dialog-message").dialog({
                                        modal: true,
                                        resizable: true,
                                        height: 260,
                                        width: 300,
                                        buttons: {
                                            Ok: function() {
                                                $.ajax({
                                                    //url: 'confirm_bid',
                                                    type: 'POST',
                                                    data: 'bidId=' + rowId + '&action=confirmBid',
                                                    success: function(response) {
                                                        /*var resposeObject = window.JSON.parse(response);
                                                        if (resposeObject.action == "true") {
                                                            $("#listOrders").trigger('reloadGrid');
                                                        }*/
                                                        $("tr.jqgrow#" + rowId).addClass("state-selected");

                                                    }
                                                });
                                                $(this).dialog("close");
                                            },
                                            Cancel: function() {
                                                $(this).dialog("close");
                                            }
                                        }
                                    });
                                }
                            });
                        }
                    }).navGrid('#pagerBids',{view:false, search:false, del:false, add:false, edit:false, refresh:true},
                            {},{},{},{closeOnEscape:true, multipleSearch:false, closeAfterSearch:false},{}
                    );

                    function statusDate(cellvalue, options, rowObject)
                    {
                        if (cellvalue == "1") {
                            return ("<span class='icon-plus-6'></span>");
                        }
                        else {
                            return ("<span class='icon-minus-4'></span>");
                        }
                    }

                    /*if (!sessionStorage.getItem("Page2Visited")) {
                        {% if (showWindow) %}
                            function closeMessage(el) {
                                el.addClass('is-hidden');
                            }
                            $('.js-messageClose').on('click', function(e) {
                                closeMessage($(this).closest('.Message'));
                            });
                            setTimeout(function() {
                                closeMessage($('#js-timer'));
                                document.location.href = "{{ path('secure_client_order', {'type': 'view'}) }}";
                            }, 3000);
                        {% endif %}
                    }
                    else {
                        sessionStorage.removeItem("Page2Visited");
                        $("#modal-window").hide();
                    }*/
                });
            </script>
        </div>
    {% endblock %}